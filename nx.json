{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "release": {
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github",
        "file": false
      }
    },
    "conventionalCommits": {
      "types": {
        "build": true,
        "chore": false,
        "ci": false,
        "docs": false,
        "feat": false,
        "fix": false,
        "major": {
          "changelog": {
            "title": "Major Updates"
          },
          "semverBump": "major"
        },
        "minor": {
          "changelog": {
            "title": "Minor Updates"
          },
          "semverBump": "minor"
        },
        "patch": {
          "changelog": {
            "title": "Patch Updates"
          },
          "semverBump": "patch"
        },
        "perf": false,
        "refactor": false,
        "revert": false,
        "style": false,
        "test": false
      }
    },
    "git": {
      "commitMessage": "chore(release): publish."
    },
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"]
      },
      "runner": "nx/tasks-runners/default"
    }
  }
}
