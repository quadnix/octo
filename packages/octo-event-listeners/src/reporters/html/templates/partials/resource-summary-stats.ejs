<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900">Summary Statistics</h3>
    <p class="text-sm text-gray-600 mt-1">Overview of changed resources</p>
  </div>
  
  <div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
      <!-- Total -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-gray-100 rounded-full mb-3">
          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-gray-900"><%= summaryStats.total %></div>
        <div class="text-sm font-medium text-gray-500">Total</div>
      </div>

      <!-- Added -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-green-100 rounded-full mb-3">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-green-600"><%= summaryStats.add %></div>
        <div class="text-sm font-medium text-green-600">Added</div>
      </div>

      <!-- Deleted -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-red-100 rounded-full mb-3">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-red-600"><%= summaryStats.delete %></div>
        <div class="text-sm font-medium text-red-600">Deleted</div>
      </div>

      <!-- Replaced -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-yellow-100 rounded-full mb-3">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-yellow-600"><%= summaryStats.replace %></div>
        <div class="text-sm font-medium text-yellow-600">Replaced</div>
      </div>

      <!-- Update -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full mb-3">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-blue-600"><%= summaryStats.update %></div>
        <div class="text-sm font-medium text-blue-600">Updated</div>
      </div>
    </div>

    <!-- Progress Bar -->
    <% if (summaryStats.total > 0) { %>
      <div class="mt-8">
        <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
          <span>Change Distribution</span>
          <span><%= summaryStats.total %> total changes</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
          <% 
            const addPercent = (summaryStats.add / summaryStats.total) * 100;
            const deletePercent = (summaryStats.delete / summaryStats.total) * 100;
            const replacePercent = (summaryStats.replace / summaryStats.total) * 100;
            const updatePercent = (summaryStats.update / summaryStats.total) * 100;
          %>
          <div class="h-full flex">
            <% if (addPercent > 0) { %>
              <div class="bg-green-500 h-full" style="width: <%= addPercent %>%" title="<%= summaryStats.add %> added (<%= Math.round(addPercent) %>%)"></div>
            <% } %>
            <% if (deletePercent > 0) { %>
              <div class="bg-red-500 h-full" style="width: <%= deletePercent %>%" title="<%= summaryStats.delete %> deleted (<%= Math.round(deletePercent) %>%)"></div>
            <% } %>
            <% if (replacePercent > 0) { %>
              <div class="bg-yellow-500 h-full" style="width: <%= replacePercent %>%" title="<%= summaryStats.replace %> replaced (<%= Math.round(replacePercent) %>%)"></div>
            <% } %>
            <% if (updatePercent > 0) { %>
              <div class="bg-blue-500 h-full" style="width: <%= updatePercent %>%" title="<%= summaryStats.update %> updated (<%= Math.round(updatePercent) %>%)"></div>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
