{
  "dependencies": {
    "@loglayer/transport-pino": "~2.2.0",
    "@quadnix/octo": "~0.0.27",
    "ejs": "~3.1.10",
    "jsondiffpatch": "~0.7.3",
    "loglayer": "~6.4.0",
    "pino": "~9.6.0",
    "pino-pretty": "~13.0.0"
  },
  "description": "Octo-Event-Listeners is an extension of the Octo library that provides common event listeners.",
  "devDependencies": {
    "@types/ejs": "~3.1.5"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "exports": {
    "./html-report": "./dist/html-report.event.listener.js",
    "./logging": "./dist/logging.event.listener.js"
  },
  "files": [
    "dist",
    "!dist/tsconfig.build.tsbuildinfo",
    "package.json"
  ],
  "jest": {
    "coverageDirectory": "./coverage",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "preset": "ts-jest/presets/default-esm",
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*spec\\.ts$",
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "main": "./dist/index.js",
  "name": "@quadnix/octo-event-listeners",
  "nx": {
    "tags": [
      "scope:octo-event-listeners"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run copy-assets",
    "check:circular-dependency": "dpdm --no-tree --exit-code circular:1 --no-warning ./dist/**/*.js",
    "copy-assets": "copyfiles -u 1 \"src/**/*.ejs\" dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testRegex=\"\\.spec.ts$\"",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --testRegex=\"\\.spec.ts$\"",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --testRegex=\"\\.e2e-spec.ts$\"",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testRegex=\"\\.ispec.ts$\"",
    "test:watch": "jest --watch"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.0.6"
}
